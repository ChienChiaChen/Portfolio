<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chiachen.portfolio.activity.rxjava.ErrorHandleActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickExceptionResumeNext"
        android:text="onExceptionResumeNext"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDoOnError"
        android:text="doOnError"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickErrorResumeNext"
        android:text="onErrorResumeNext"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickErrorReturnItem"
        android:text="onErrorReturnItem"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickErrorReturn"
        android:text="onErrorReturn"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRetry"
        android:text="Retry"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        />

</LinearLayout>
